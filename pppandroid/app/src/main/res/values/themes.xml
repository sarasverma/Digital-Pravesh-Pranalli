<resources>
    <style name="Theme.pppandroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_200</item>
        <item name="colorSecondaryVariant">@color/yellow_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your button here. -->
        <item name="buttonStyle">@style/OrangeButton</item>
    </style>

    <style name="ThemeOverlay.pppandroid.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/gray_900</item>
        <item name="fullscreenTextColor">@color/white</item>
    </style>

    <style name="OrangeButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/orange_500</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
